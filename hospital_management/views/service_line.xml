<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Tree view -->
        <record id="service_line_tree_view" model="ir.ui.view">
            <field name="name">hospital.department.service.line.tree.view</field>
            <field name="model">hospital.department.service.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree string="Services lines" editable="bottom">
<!--                    <field name="name" />-->
                    <field name="item_id" />
                    <field name="price" />
                    <field name="service_code" />
                </tree>
            </field>
        </record>

        <record id="service_line_form_view" model="ir.ui.view">
            <field name="name">hospital.department.service.line.form.view</field>
            <field name="model">hospital.department.service.line</field>
            <field name="arch" type="xml">
                <form string="Billing" editable="bottom">
                    <group  col="4">
<!--                      <field name="name" />-->
                      <field name="item_id" />
                    <field name="price" />
                    <field name="service_code" />
                    </group>
                </form>
            </field>
        </record>

</odoo>
