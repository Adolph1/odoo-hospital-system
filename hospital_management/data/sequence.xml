<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Adding New Sequence For A Field-->

    <data noupdate="1">
        <!-- Sequences for hospital.patient -->
        <record id="seq_hospital_patient" model="ir.sequence">
            <field name="name">Patient Sequence</field>
            <field name="code">hospital.patient.sequence</field>
            <field name="prefix">PMR</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for hospital.appointment -->
        <record id="seq_hospital_appointment" model="ir.sequence">
            <field name="name">Appointment Sequence</field>
            <field name="code">hospital.appointment</field>
            <field name="prefix">APT</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False"/>
        </record>


          <!-- Sequences for hospital.patient.billing -->
        <record id="seq_hospital_patient_billing" model="ir.sequence">
            <field name="name">Billing Sequence</field>
            <field name="code">hospital.patient.billing.sequence</field>
            <field name="prefix">BILL</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False"/>
        </record>


                  <!-- Sequences for hospital.patient.file -->
        <record id="seq_hospital_patient_file" model="ir.sequence">
            <field name="name">Files Sequence</field>
            <field name="code">hospital.patient.file.sequence</field>
            <field name="prefix">FL/</field>
            <field name="padding">7</field>
            <field name="company_id" eval="False"/>
        </record>



    </data>
</odoo>
